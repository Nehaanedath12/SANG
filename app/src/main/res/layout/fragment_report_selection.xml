<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/purchase_report"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Purchase Report"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
    <TextView
        android:id="@+id/sale_report"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/white"
        android:background="@color/purple_500"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Sales Report"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/Payment_report"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Payment Report"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/receipt_report"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Receipt Report"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/purchase_return_report"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Purchase Return Report"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/sales_return_report"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Sales Return Report"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/purchase_order_report"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Purchase Order Report"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp">
        <TextView
            android:id="@+id/sales_order_report"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Sales Order Report"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>