<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/purple_500">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_save"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>
            <ImageView
                android:layout_toStartOf="@+id/save"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:id="@+id/card_header"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="10dp"
       android:layout_marginStart="5dp"
       android:layout_marginEnd="5dp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:orientation="vertical">
       <TextView
           android:id="@+id/docNo"
           android:hint="DocNo"
           android:textColor="@color/black"
           android:textSize="20dp"
           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <EditText
           android:layout_marginTop="20dp"
           android:longClickable="false"
           android:id="@+id/date"
           android:layout_below="@+id/docNo"
           android:hint="Date"
           android:focusable="false"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:drawableEnd="@drawable/ic_date"/>


           <AutoCompleteTextView
               android:id="@+id/customer"
               android:longClickable="false"
               android:layout_below="@+id/date"
               android:hint="Select Customer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
<!--           <EditText-->
<!--               android:id="@+id/customer"-->
<!--               android:longClickable="false"-->
<!--               android:layout_below="@+id/date"-->
<!--               android:hint="Select Customer"-->
<!--               android:layout_width="match_parent"-->
<!--               android:layout_height="wrap_content"/>-->



           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/customerRV"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:id="@+id/tag1_header"
               android:layout_below="@+id/customer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/tag_1_h_rv"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:id="@+id/tag_2_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/tag_2_h_rv"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:id="@+id/tag_3_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/tag_3_hrv"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:id="@+id/tag_4_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/tag_4_hrv"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:focusable="false"
               android:id="@+id/tag_5_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/tag_5_h_r_v"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:id="@+id/Tag6_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/Tag6_headerRV"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:id="@+id/Tag7_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/Tag7_headerRV"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:visibility="gone"
               android:longClickable="false"
               android:id="@+id/Tag8_header"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/Tag8_headerRV"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/description"
               android:layout_below="@+id/customer"
               android:hint="Description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>
   </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/linear_add_details"
                android:layout_below="@id/card_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Product Details"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/card_header"/>
            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:layout_marginEnd="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_below="@id/linear_add_details"
                android:id="@+id/cardView_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <EditText
                        android:id="@+id/product_name"
                        android:hint="Barcode or Name"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                      <ImageView
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:src="@drawable/barcode_image"
                          android:id="@+id/barcodeI"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/productRV"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <SurfaceView
                        android:visibility="gone"
                        android:id="@+id/surfaceView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>

                    <EditText
                        android:id="@+id/qty_product"
                        android:layout_below="@+id/date"
                        android:hint="Qty"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/tag_1_body"
                        android:layout_below="@+id/customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tag_1_body_rv"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/tag_2_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tag_2_body_r_v"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/tag_3_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tag_3_body_r_v"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/tag_4_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tag_4_body_r_v"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/tag_5_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tag_5_body_r_v"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/Tag6_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/Tag6_bodyRV"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/Tag7_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/Tag7_bodyRV"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:visibility="gone"
                        android:longClickable="false"
                        android:id="@+id/Tag8_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/Tag8_bodyRV"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/save_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--              -->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:padding="10dp"/>-->

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
