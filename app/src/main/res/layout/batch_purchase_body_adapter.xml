<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parentCard_batch"
    android:layout_height="wrap_content">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_body_adapter"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            >

        <LinearLayout

                android:id="@+id/parentLinear_batch"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/deleteImg_batch"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_delete_black"/>
            <LinearLayout
                android:id="@+id/linear_tags_batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"/>

            <TextView
                    android:id="@+id/product_name_batch"
                    android:layout_width="150dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Product"/>
                <TextView
                    android:id="@+id/unit_batch"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Unit"/>



<!--                <TextView-->
<!--                    android:id="@+id/batch"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Batch"/>-->
                <TextView
                    android:id="@+id/qty_batch"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Total Qty"/>

<!--                <TextView-->
<!--                    android:id="@+id/mfDate"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Mf.Date"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/expDate"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Exp.Date"/>-->

                <TextView
                    android:id="@+id/rate_batch"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Rate"/>


                <TextView
                    android:id="@+id/gross_batch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Gross" />

            <TextView
                android:id="@+id/vat_per_batch"
                android:layout_width="55dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Vat Per"/>

                <TextView
                    android:id="@+id/vat_batch"
                    android:layout_width="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Vat"/>
                <TextView
                    android:id="@+id/net_batch"
                    android:layout_width="55dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Net"/>
                <TextView
                    android:id="@+id/discount_batch"
                    android:layout_width="70dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Discount"/>
                <TextView
                    android:id="@+id/add_charges_batch"
                    android:layout_width="70dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Add Charges"/>




                <TextView
                    android:id="@+id/remarks_batch"
                    android:layout_width="70dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Remarks"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </HorizontalScrollView>


</LinearLayout>