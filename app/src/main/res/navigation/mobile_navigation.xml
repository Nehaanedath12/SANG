<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sangsolutions.sang.Fragment.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_salesPurchaseFragment"
            app:destination="@id/salesPurchaseFragment" />
    </fragment>
    <fragment
        android:id="@+id/salesPurchaseFragment"
        tools:layout="@layout/fragment_sales_purchase"
        android:name="com.sangsolutions.sang.Fragment.SalesPurchaseFragment"
        android:label="{toolTitle}"
        >
        <action
            android:id="@+id/action_salesPurchaseFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="iDocType"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="toolTitle"
            app:argType="string" />

    </fragment>
</navigation>